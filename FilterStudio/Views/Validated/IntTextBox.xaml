<UserControl x:Class="FilterStudio.Views.Validated.IntTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilterStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="Root">
    <Grid>
        <TextBox x:Name="InputTextBox" VerticalContentAlignment="Center" Text="{Binding ElementName=Root,UpdateSourceTrigger=Explicit, Path=Text, Mode=TwoWay}"  TextChanged="CheckForInvalidState" Loaded="CheckForInvalidState" GotFocus="CheckForInvalidState" LostFocus="CheckForInvalidState">
        </TextBox>
    </Grid>
</UserControl>
