<UserControl x:Class="FilterStudio.Views.FilterListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilterStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="Root">
    <!--We expect that the DataContext of this view will be of a type of FilterVM-->
    <Grid Background="LightGray">
        <TextBox MaxLines="1" Text="{Binding ElementName=Root, Path=DataContext.Name}"></TextBox>            
    </Grid>
</UserControl>
