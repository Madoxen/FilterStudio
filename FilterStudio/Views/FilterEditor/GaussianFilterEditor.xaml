<UserControl x:Class="FilterStudio.Views.GaussianFilterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilterStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400" BorderBrush="Black" BorderThickness="1" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Sigma:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBox Grid.Column="1" FontSize="25" Margin="18"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding RelativeSource={RelativeSource AncestorType=local:GaussianFilterEditor}, 
                 Path=DataContext.Sigma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Filter Width:" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBox Grid.Column="1" Grid.Row="1" FontSize="20" Margin="18"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding RelativeSource={RelativeSource AncestorType=local:GaussianFilterEditor}, 
                 Path=DataContext.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Filter Height:" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBox Grid.Column="1" Grid.Row="2" FontSize="20" Margin="18"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding RelativeSource={RelativeSource AncestorType=local:GaussianFilterEditor}, 
                 Path=DataContext.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
